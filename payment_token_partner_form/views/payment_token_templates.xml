<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="payment_acquirer_list" name="Internal Payment Tokenization">
        <t t-call="website.layout">
            <div id="wrap" class="container oe_structure">
                <div class="py-4">
                    <h1 class="mb-3">Payment Methods</h1>
                    <t t-if="providers_sudo">
                        <p class="text-muted">
                            Select a payment provider below to save a new payment method for this contact.
                        </p>
                        <ul class="list-unstyled">
                            <t t-foreach="providers_sudo" t-as="provider">
                                <li class="mb-2">
                                    <span class="fw-semibold" t-esc="provider.display_name"/>
                                </li>
                            </t>
                        </ul>
                        <p class="text-muted">
                            This fallback template is rendered because the standard payment templates are not
                            available on this database.
                        </p>
                    </t>
                    <t t-else="">
                        <p class="text-muted">No payment providers are available for tokenization.</p>
                    </t>
                </div>
            </div>
        </t>
    </template>
</odoo>
