<odoo>
    <!-- Wizard form view -->
    <record id="view_account_invoice_token_wizard_form" model="ir.ui.view">
        <field name="name">account.invoice.token.wizard.form</field>
        <field name="model">account.invoice.token.wizard</field>
        <field name="arch" type="xml">
            <form string="Charge with Saved Card">
                <sheet>
                    <group>
                        <field name="invoice_id"/>
                        <field name="partner_id"/>
                        <field name="company_id"/>
                        <field name="currency_id"/>
                    </group>
                    <group>
                        <field name="token_id" required="1"/>
                        <field name="amount"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Charge" type="object"
                            name="action_charge_with_token"
                            class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action to open the wizard -->
    <record id="action_account_invoice_token_wizard" model="ir.actions.act_window">
        <field name="name">Charge with Saved Card</field>
        <field name="res_model">account.invoice.token.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_account_invoice_token_wizard_form"/>
        <field name="target">new</field>
    </record>

    <!-- Add button on customer invoice form -->
    <record id="view_move_form_inherit_token_payment" model="ir.ui.view">
        <field name="name">account.move.form.token.payment</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_open_token_payment_wizard"
                        type="object"
                        string="Charge with Saved Card"
                        class="btn-primary"/>
            </xpath>
        </field>
    </record>
</odoo>
