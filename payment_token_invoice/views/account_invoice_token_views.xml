<odoo>
    <!-- Wizard form view -->
    <record id="view_account_invoice_token_wizard_form" model="ir.ui.view">
        <field name="name">account.invoice.token.wizard.form</field>
        <field name="model">account.invoice.token.wizard</field>
        <field name="arch" type="xml">
            <form string="Charge with Saved Card">
                <sheet>
                    <group>
                        <field name="invoice_id"/>
                        <field name="partner_id"/>
                        <field name="company_id"/>
                        <field name="currency_id"/>
                    </group>
                    <group>
                        <field name="token_id" required="1"/>
                        <field name="amount"/>
                        <field name="reference"/>
                    </group>
                    <footer>
                        <button string="Charge" type="object" name="action_charge" class="btn-primary"/>
                        <button string="Cancel" special="cancel" class="btn-secondary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Wizard action -->
    <record id="action_account_invoice_token_wizard" model="ir.actions.act_window">
        <field name="name">Charge with Saved Card</field>
        <field name="res_model">account.invoice.token.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{}</field>
    </record>

    <!-- Server action for Action menu (robust across view structures) -->
    <record id="server_action_open_token_payment_wizard" model="ir.actions.server">
        <field name="name">Charge with Saved Card</field>
        <field name="model_id" ref="account.model_account_move"/>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_view_types">form</field>
        <field name="state">code</field>
        <field name="code">
action = records.action_open_token_payment_wizard()
        </field>
    </record>

    <!-- Add button on invoice form (best-effort; doesn't fail install if xpath target not present) -->
    <record id="view_move_form_inherit_token_payment" model="ir.ui.view">
        <field name="name">account.move.form.token.payment</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside" optional="1">
                <button name="action_open_token_payment_wizard"
                        type="object"
                        string="Charge with Saved Card"
                        class="oe_stat_button"
                        icon="fa-credit-card"/>
            </xpath>
            <xpath expr="//header" position="inside" optional="1">
                <button name="action_open_token_payment_wizard"
                        type="object"
                        string="Charge with Saved Card"
                        class="btn-primary"/>
            </xpath>
        </field>
    </record>
</odoo>
